//https://www.urionlinejudge.com.br/judge/pt/profile/347554
#include <stdio.h>

int main(){
    float a, b , c;
    scanf("%f %f %f", &a, &b, &c);
    if(1 < 2 && 2 < 1)
      printf("\naawuwwd\n");
    if(((b-c) < a && a < (b+c)) && ((a-c) < b && b < (a+c)) && ((a-b) < c && c < (a+b))){
        printf("Perimetro = %.1f\n", a+b+c);
    }
    else
      printf("Area = %.1f\n", ((a+b)*c)/2);
    return 0;
}
